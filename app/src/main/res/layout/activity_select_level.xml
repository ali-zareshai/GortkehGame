<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_sele"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".SelectLevelActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/refreshgameR"
            android:background="#689f38"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:padding="8dp"
                android:src="@drawable/ic_refresh_black_24dp"
                android:layout_height="50dp" />
            <CustomView.CustomTextViewVazir
                android:layout_width="wrap_content"
                android:text="@string/refresh_game"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:padding="4dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/refreshgameR"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="30dp">

                <CustomView.CustomTextView
                    android:id="@+id/help_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/help_select"
                    android:textColor="#000"
                    android:textDirection="rtl"
                    android:textSize="15dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_medium"
                    android:layout_width="120dp"
                    android:layout_height="225dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/help_select"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:elevation="5dp"
                    card_view:cardCornerRadius="@dimen/card_album_radius">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/thumbnail2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/album_cover_height"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/math2" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_below="@id/thumbnail2">

                            <CustomView.CustomTextView
                                android:id="@+id/title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="@dimen/album_title_padding"
                                android:paddingRight="@dimen/album_title_padding"
                                android:text="@string/medium"
                                android:textColor="@color/album_title"
                                android:textSize="@dimen/album_title" />

                            <CustomView.CustomTextView2
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/title2"
                                android:layout_centerHorizontal="true"
                                android:padding="3dp"
                                android:text="@string/tenitem"
                                android:textSize="10dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_asan"
                    android:layout_width="120dp"
                    android:layout_height="225dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/help_select"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:elevation="5dp"
                    card_view:cardCornerRadius="@dimen/card_album_radius">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/thumbnail1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/album_cover_height"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/math1" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_below="@id/thumbnail1">

                            <CustomView.CustomTextView
                                android:id="@+id/title1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="@dimen/album_title_padding"
                                android:paddingRight="@dimen/album_title_padding"
                                android:text="@string/asan"
                                android:textColor="@color/album_title"
                                android:textSize="@dimen/album_title" />

                            <CustomView.CustomTextView2
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/title1"
                                android:layout_centerHorizontal="true"
                                android:padding="3dp"
                                android:text="@string/tenitem"
                                android:textSize="10dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_hard"
                    android:layout_width="120dp"
                    android:layout_height="225dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/card_view_asan"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="25dp"
                    android:elevation="5dp"
                    android:paddingBottom="30dp"
                    card_view:cardCornerRadius="@dimen/card_album_radius">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/thumbnail3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/album_cover_height"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/math3" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_below="@id/thumbnail3">

                            <CustomView.CustomTextView
                                android:id="@+id/title3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="@dimen/album_title_padding"
                                android:paddingRight="@dimen/album_title_padding"
                                android:text="@string/hard"
                                android:textColor="@color/album_title"
                                android:textSize="@dimen/album_title" />

                            <CustomView.CustomTextView2
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/title3"
                                android:layout_centerHorizontal="true"
                                android:padding="3dp"
                                android:text="@string/tenitem"
                                android:textSize="10dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_pro"
                    android:layout_width="120dp"
                    android:layout_height="225dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/card_view_asan"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:elevation="5dp"
                    android:paddingBottom="30dp"
                    card_view:cardCornerRadius="@dimen/card_album_radius">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/thumbnail4"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/album_cover_height"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/math4" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_below="@id/thumbnail4">

                            <CustomView.CustomTextView
                                android:id="@+id/title4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="@dimen/album_title_padding"
                                android:paddingRight="@dimen/album_title_padding"
                                android:text="@string/pro"
                                android:textColor="@color/album_title"
                                android:textSize="@dimen/album_title" />

                            <CustomView.CustomTextView2
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/title4"
                                android:layout_centerHorizontal="true"
                                android:padding="3dp"
                                android:text="@string/twenyitem"
                                android:textSize="10dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>