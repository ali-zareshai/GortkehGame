<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2eac6e"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="300dp"
            android:id="@+id/icn1"
            android:background="#2eac6e"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_kor"
            android:layout_height="200dp" />
        <ImageView
            android:layout_width="200dp"
            android:src="@drawable/chortkeh2"
            android:layout_below="@id/icn1"
            android:visibility="invisible"
            android:id="@+id/icon_spalsh"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="200dp" />
        <CustomView.CustomTextView
            android:layout_width="wrap_content"
            android:text="@string/gorteh"
            android:textColor="#ffffff"
            android:id="@+id/name_icon"
            android:textSize="35dp"
            android:layout_below="@id/icon_spalsh"
            android:layout_centerHorizontal="true"
            android:padding="4dp"
            android:layout_height="wrap_content" />
        <CustomView.CustomTextView
            android:layout_width="wrap_content"
            android:text="@string/develop"
            android:textColor="#ffffff"
            android:textSize="8dp"
            android:gravity="center"
            android:layout_below="@id/name_icon"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:padding="4dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>